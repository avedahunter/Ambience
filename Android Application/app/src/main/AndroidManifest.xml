<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group4asu.ambience" >

    <uses-permission
        android:name="android.permission.INTERNET"
        android:maxSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Home"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeScreen"
            android:label="@string/title_activity_home_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".RuleBase"
            android:label="@string/title_activity_rule_base"
            android:screenOrientation="portrait" >
        </activity>

        <service
            android:name=".ServiceForNotification"
            android:exported="false"
            android:process=".ServiceForNotification.service" />

        <activity
            android:name=".elementActivity"
            android:label="@string/title_activity_element"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".zip"
            android:label="@string/title_activity_zip" >
        </activity>
    </application>

</manifest>
